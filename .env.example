# .env.example

########################################
# Telegram Bot (nhận alert)
########################################
# Token lấy từ BotFather
TELEGRAM_TOKEN=
# ID chat hoặc nhóm mà bot sẽ gửi tin
TELEGRAM_CHAT_ID=

########################################
# Giám sát CPU
########################################
# Ngưỡng CPU (%) để bắt đầu kiểm tra site
CPU_THRESHOLD=
# Khoảng thời gian giữa 2 lần check CPU (giây)
CHECK_INTERVAL=

########################################
# aaPanel
########################################
# URL aaPanel, ví dụ: https://123.45.67.89:8888
AAPANEL_URL=
# API key của aaPanel
AAPANEL_KEY=

########################################
# Cloudflare
########################################
# API Token tạo tại dashboard Cloudflare
CF_API_TOKEN=
# Zone ID của domain trên Cloudflare
CF_ZONE_ID=
# WAF Rule ID cần bật/tắt Captcha
CF_WAF_RULE_ID=

########################################
# Dò tìm DDoS qua log
########################################
# Thư mục chứa log nginx/Apache
LOG_DIR=
# Khoảng thời gian xem log (giây)
WINDOW_S=
# Ngưỡng số request trong WINDOW_S để coi là DDoS
THRESHOLD=

########################################
# Auto-monitor
########################################
# Phút giữa 2 lần chạy tự động bật/tắt WAF
RUN_INTERVAL_MINUTES=
